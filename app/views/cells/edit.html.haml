%h2
  Edit Response
= form_for(@cell, url: board_cell_path(@cell.board, @cell), html: { method: :put }) do |f|
  .field
    = f.label 'Please share your learning from this activity:'
    = f.text_area :response, rows: 10, value: @cell.response, class: 'form-control'
  .field
    = f.label 'Want to upload a picture?'
    = f.file_field :picture
  .field
    = f.submit 'Submit', class: 'btn btn-success'
= link_to "Cancel", board_cell_path(@cell.board, @cell)
